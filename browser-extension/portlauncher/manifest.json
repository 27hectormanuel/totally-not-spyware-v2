{
  "manifest_version": 3,
  "name": "Port Tool Launcher",
  "version": "0.1.0",
  "description": "Restart/kill local python http.server via native messaging and open a chosen port.",
  "permissions": [
    "nativeMessaging",
    "storage",
    "tabs"
  ],
  "action": {
    "default_title": "Port Launcher",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service_worker.js"
  }
}


